<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:s="clr-namespace:SkiaSharp;assembly=SkiaSharp"
	xmlns:l="clr-namespace:Scribble"
	xmlns:vm="clr-namespace:Scribble.ViewModels"
	x:DataType="vm:MainViewModel"
	x:Class="Scribble.MainPage">
	<FlyoutPage.Flyout>
		<ContentPage Title="Flyout">
			<Label Text="Test"/>
		</ContentPage>
	</FlyoutPage.Flyout>
	<FlyoutPage.Detail>
		<NavigationPage>
			<x:Arguments>
				<l:ScribblePage BindingContext="{Binding CurrentEdit}" BackgroundColor="Gray"/>
			</x:Arguments>
		</NavigationPage>
	</FlyoutPage.Detail>
</FlyoutPage>
