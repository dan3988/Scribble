<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:l="clr-namespace:Scribble"
	xmlns:m="clr-namespace:Scribble.Media"
	xmlns:mx="clr-namespace:Scribble.MarkupExtensions"
	x:Class="Scribble.ScribblePage"
	Title="ScribblePage">
	<ContentPage.BindingContext>
		<l:ScribbleModel/>
	</ContentPage.BindingContext>
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Undo" Command="{Binding UndoCommand}" IsEnabled="{Binding CanUndo}">
			<ToolbarItem.IconImageSource>
				<m:FilteredImageSource Source="undo.svg" Color="White"/>
			</ToolbarItem.IconImageSource>
		</ToolbarItem>
		<ToolbarItem Text="Redo" Command="{Binding RedoCommand}" IsEnabled="{Binding CanRedo}">
			<ToolbarItem.IconImageSource>
				<m:FilteredImageSource Source="redo.svg" Color="White"/>
			</ToolbarItem.IconImageSource>
		</ToolbarItem>
		<ToolbarItem Text="Open" Clicked="OpenFile">
			<ToolbarItem.IconImageSource>
				<m:FilteredImageSource Source="open.svg" Color="White"/>
			</ToolbarItem.IconImageSource>
		</ToolbarItem>
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<l:ScribbleView/>
	</ContentPage.Content>
</ContentPage>